@using BookWorm.Models;
@model List<Book>

@{
    Layout = "_Layout";
    //var plist = ViewBag.products;
}

<div class="container">
    <h4 class="display-4">All Books </h4>
    <div class="row">
        @foreach (var b in @Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="@b.CoverImage" width="50" height="150" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">@b.Title</h3>
                        <p class="card-text">@b.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/Book/GetBook/@b.BookId" class="btn btn-sm btn-outline-secondary">View Detailed Books</a>
                            </div>
                            @*<small class="text-muted">Item Unique Name</small>*@
                            <div class="btn-group">
                                <a href="/Book/UpdateBook/@b.BookId" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


